<div class="show-posts-container">
  <div class="boxes">
    <div class="posts-content">
      <h1><%= @post.title%> by <%= @post.author.name%></h1>
      <p>
        Comments: <%= @post.comments_counter%> 
        Likes: <%= @post.likes_counter %>
      </p>
    </div>

    <p> <%= @post.text%></p>
  </div>

  <%= render 'shared/like' %>
    <div class="smaller-buttons">
      <a class="comment-button" href=<%="/users/user_id/posts/#{@post.id}/comments/new"%>>Comment</a>
    </div>

  <div class="boxes posts-messages">
    <% @post.comments.each do |comment| %>
     <p><%= comment.author.name%>: <%= comment.text %></p>
    <%end%>
  </div>
  
  <div class="smaller-buttons">
    <% if user_signed_in? && current_user == @post.author %>
      <%= link_to "Delete", destroy_user_post_path(user_id: @post.author, post_id: @post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "delete-button" %>
    <% end %>
  </div>
</div>
