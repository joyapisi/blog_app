<div class="all-forms flex">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, placeholder:"email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder:"password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field remember-me" id="flex">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"flex" %>
    </div>
  <% end %>

  
 
    <div class="actions field">
    <button>
    <%= f.submit "Log in", id:"inner-button" %>
    </button>
    </div>
  
 
<% end %>

<%= render "devise/shared/links" %>
</div>